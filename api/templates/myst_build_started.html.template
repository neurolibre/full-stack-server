    <style>
        body {{
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }}

        .email-container {{
            max-width: 600px;
            margin: 20px auto;
            background-color: #ffffff;
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
        }}

        .header {{
            background-color: #394459;
            color: #ffffff;
            padding: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }}

        .header .logo {{
            position: absolute;
            left: 20px;
            height: 32px;
            width: auto;
        }}

        .header h1 {{
            margin: 0;
            font-size: 24px;
        }}

        .content {{
            padding: 20px;
            color: #333333;
            line-height: 1.6;
        }}

        .content h2 {{
            font-size: 20px;
            margin-top: 0;
            color: #488099;
        }}

        .content p {{
            margin: 10px 0;
        }}

        .content a {{
            color: #488099;
            text-decoration: none;
            font-weight: bold;
        }}

        .content a:hover {{
            text-decoration: underline;
        }}

        .footer {{
            background-color: #f4f4f4;
            text-align: center;
            padding: 10px 20px;
            color: #666;
            font-size: 12px;
        }}

        .footer a {{
            color: #90c37f;
            text-decoration: none;
        }}

        .emoji {{
            font-size: 1.2em;
        }}

        .info-box {{
            background-color: #e3f2fd;
            border-left: 4px solid #2196F3;
            padding: 15px;
            margin: 15px 0;
            border-radius: 4px;
        }}

        .code {{
            background-color: #f5f5f5;
            border: 1px solid #ddd;
            border-radius: 3px;
            padding: 2px 4px;
            font-family: 'Courier New', Courier, monospace;
            font-size: 0.9em;
            color: #333;
        }}

        .details-list {{
            margin: 15px 0;
        }}

        .details-list li {{
            margin: 8px 0;
        }}

        @media (max-width: 600px) {{
            .content h2 {{
                font-size: 18px;
            }}

            .header h1 {{
                font-size: 20px;
            }}
        }}
    </style>
